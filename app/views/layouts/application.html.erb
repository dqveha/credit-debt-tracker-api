<!DOCTYPE html>
<html>
    <head>
        <title>Credit Debt Tracker API</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
      <main>
        <h2><%= flash[:notice] %></h2>
        <h2><%= flash[:error] %></h2>
        <%= link_to "Create an Account", new_user_registration_path unless current_user %>
        <%= link_to "Sign In", new_user_session_path unless current_user %>
        <%= link_to "Edit Account", edit_user_registration_path if current_user %>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete if current_user %>
        <%= yield %>
      </main>
    </body>
</html>
